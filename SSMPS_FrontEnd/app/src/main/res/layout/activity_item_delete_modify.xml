<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <LinearLayout
        android:background="#eeeeee"
        android:layout_width="380dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="제품 이름 : "/>

        <TextView
            android:id="@+id/itemDeleteModify_item_name"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="19dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/itemDeleteModify_item_img"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/choco" />

    <LinearLayout
        android:background="#FAFAD2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:background="#F9F5EB"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="380dp"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="재고 : "/>

            <EditText
                android:id="@+id/itemDeleteModify_item_quantity"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="13dp"
                android:hint="재고를 입력해 주세요"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:background="#F9F5EB"
            android:orientation="horizontal"
            android:layout_width="380dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종류 : "
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/itemDeleteModify_item_type"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:background="#F9F5EB"
            android:orientation="horizontal"
            android:layout_width="380dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="70dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="가격 : "/>

            <TextView
                android:id="@+id/itemDeleteModify_item_price"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:textSize="20dp">

        <Button
            android:id="@+id/itemDeleteModify_modify_btn"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#394867"
            android:text="수정하기"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/itemDeleteModify_delete_btn"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#394867"
            android:text="삭제하기"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>