<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="선택 매장"
        android:textColor="#000000 "
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:background="#eeeeee"
        android:layout_width="380dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/functionSelect_store_name"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/functionSelect_store_layout"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#394867"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="가게 배치"
        android:textSize="20dp" />

    <Button
        android:id="@+id/functionSelect_item_add"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#394867"
        android:text="제품 등록"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/functionSelect_item_delete_modify"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#394867"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="제품 수정 및 삭제"
        android:textSize="20dp" />

</LinearLayout>