<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#FFFFF0"
    android:orientation="vertical"
    tools:context="com.example.ssmps_paymentscreen.MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="SSMPS"
        android:textStyle="bold"
        android:textColor="#F3A9A9"
        android:textSize="40sp"/>

    <LinearLayout
        android:id="@+id/product_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/line">

        <TextView
            android:id="@+id/text"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제품명"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가격"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/product_cnt"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="갯수"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/product_all_price"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 가격"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

        <TextView
            android:layout_weight="0.35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        android:dividerHeight="2dp"
        android:divider="#ffc0cb">
    </ListView>

    <TextView
        android:id="@+id/sum_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="총 금액: "
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textSize="30sp" />

    <Button
        android:id="@+id/payment_button"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#F3A9A9"
        android:text="결제"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"/>


</LinearLayout>